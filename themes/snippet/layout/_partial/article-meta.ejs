<div class="post-meta">
    <% if(!is_category()){ %>
    <%
        var _showLevel = (theme.whichCategory ? Math.min(theme.whichCategory, post.categories.data.length) : post.categories.data.length) - 1,
                _data = post.categories.data[_showLevel],
                _categoryInfo = _data ? _data.name : " ";
    %>
    <span class="categories-meta fa-wrap">
        <i class="fa fa-folder-open-o"></i>
        <a href="/categories/<%= _categoryInfo %>">
            <%= _categoryInfo %>
        </a>
    </span>
    <% } %>
    <% if(!is_tag()){ %>
    <span class="fa-wrap">
        <span class="tags-meta">
			<% if(post.tags && post.tags.length > 0 && post.tags.data[0] && post.tags.data[0].name){ %>
				<% for(var i = 0; i < post.tags.length; i++) { %>
					<i class="fa fa-tags"></i>
					<a href="/tags/<%= post.tags.data[i].name %>">
						<%= post.tags.data[i].name %>
					</a>
				<% } %>
            <% }else{ %>
                <%= " " %>
            <% } %>
        </span>
    </span>
    <% } %>
    <%  
        var format = 'YYYY/MM/DD';
        if (is_archive()) format = "MM/DD";
    %>
    <span class="fa-wrap">
        <i class="fa fa-clock-o"></i>
        <span class="date-meta"><%- date(post.date, format) %></span>
    </span>
</div>
